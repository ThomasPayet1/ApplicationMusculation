<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ID -->
        <TextView
            android:id="@+id/detail_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:text="ID : " />

        <!-- Nom -->
        <TextView
            android:id="@+id/detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:text="Nom : " />

        <!-- Adresse -->
        <TextView
            android:id="@+id/detail_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:text="Adresse : " />

        <!-- Date de création -->
        <TextView
            android:id="@+id/detail_date_creation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:text="Date de création : " />

        <!-- Commune -->
        <TextView
            android:id="@+id/detail_com_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:text="Commune : " />

        <!-- Type d'équipement -->
        <TextView
            android:id="@+id/detail_equip_type_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:text="Type d'équipement : " />

        <!-- Famille d'équipement -->
        <TextView
            android:id="@+id/detail_equip_type_famille"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:text="Famille d'équipement : " />

        <!-- Coordonnées -->
        <TextView
            android:id="@+id/detail_coordonnees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:text="Coordonnées : " />

        <!-- Equipements associés -->
        <TextView
            android:id="@+id/detail_equip_aps_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:text="Equipements associés : " />

        <!-- Région -->
        <TextView
            android:id="@+id/detail_reg_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:text="Région : " />

        <!-- Favoris -->
        <TextView
            android:id="@+id/detail_favoris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:text="Favoris : " />

        <!-- Bouton pour gérer les favoris -->
        <Button
            android:id="@+id/detail_favoris_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Ajouter aux favoris" />

    </LinearLayout>
</ScrollView>